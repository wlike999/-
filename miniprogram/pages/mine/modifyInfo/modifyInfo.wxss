/* miniprogram/pages/mine/modifyInfo/modifyInfo.wxss */

.title{
  font-size: large;
  text-align: center;
  padding: 5% 0;
  font-weight: bold;
}
.top{
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 20rpx;
}
.imgBox{
  width: 32%;
  margin: 0.65%;
  padding-bottom: 32%;
  height: 0;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}  
.image-hover{
  opacity: 0.8;
}
.btn-hover{
  opacity: 0.8;
  scale: 1.2;
  
}
image{
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
}
.loading{
  padding-top: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.loading text{
  padding-top: 25rpx;
  font-size: 30rpx;
}
.btnContainer{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
page {
  background: papayawhip;
  width: 100%;
  height: 100%;
  background: url(https://i.loli.net/2020/12/15/eCNRo4gtkZGEVu2.png);
  box-sizing: border-box;
    background-size: 100% auto;
}