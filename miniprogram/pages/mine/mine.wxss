/* pages/mine/mine.wxss */
.line{
  width: 100%;
  background-color: gray;
  opacity: 0.3;
  height: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.topContainer{
  padding-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.userContainer{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 50%;
}
.topRightContainer{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: gray;
  opacity: 0.6;
}
.tapOnHover{
  color:black;
  opacity: 1;
}
.imgBox{
  width: 32%;
  margin: 0.65%;
  padding-bottom: 32%;
  height: 0;
  position: relative;
}  
image{
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 20%;
  position: absolute;
  top: 0;
  left: 0;
}
.name{
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
} 

